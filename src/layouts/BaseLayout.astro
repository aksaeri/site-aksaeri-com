---
interface Props {
  title?: string;
  description?: string;
}

const { title = 'Alexander K. Saeri', description = 'AI safety researcher and policy analyst' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <style is:global>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
      line-height: 1.6;
      color: #333;
      max-width: 900px;
      margin: 0 auto;
      padding: 2rem;
    }

    header {
      margin-bottom: 3rem;
      padding-bottom: 1rem;
      border-bottom: 2px solid #e5e5e5;
    }

    nav {
      margin-top: 1rem;
    }

    nav a {
      margin-right: 1.5rem;
      text-decoration: none;
      color: #0066cc;
      font-weight: 500;
    }

    nav a:hover {
      text-decoration: underline;
    }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
      color: #111;
    }

    h2 {
      font-size: 1.8rem;
      margin-top: 2.5rem;
      margin-bottom: 1rem;
      color: #111;
    }

    h3 {
      font-size: 1.3rem;
      margin-top: 2rem;
      margin-bottom: 0.75rem;
      color: #333;
    }

    p {
      margin-bottom: 1rem;
    }

    a {
      color: #0066cc;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }

    ul {
      margin-bottom: 1rem;
      margin-left: 2rem;
    }

    li {
      margin-bottom: 0.5rem;
    }

    .btn {
      display: inline-block;
      padding: 0.75rem 1.5rem;
      background-color: #0066cc;
      color: white;
      text-decoration: none;
      border-radius: 4px;
      font-weight: 500;
      margin-right: 1rem;
      margin-bottom: 1rem;
    }

    .btn:hover {
      background-color: #0052a3;
      text-decoration: none;
    }

    .btn-outline {
      background-color: transparent;
      color: #0066cc;
      border: 2px solid #0066cc;
    }

    .btn-outline:hover {
      background-color: #0066cc;
      color: white;
    }

    .section {
      margin-bottom: 3rem;
    }

    footer {
      margin-top: 4rem;
      padding-top: 2rem;
      border-top: 2px solid #e5e5e5;
      color: #666;
      font-size: 0.9rem;
    }

    img {
      max-width: 100%;
      height: auto;
      border-radius: 4px;
    }

    hr {
      border: none;
      border-top: 1px solid #e5e5e5;
      margin: 2rem 0;
    }

    .profile-header {
      display: flex;
      align-items: center;
      gap: 2rem;
      margin-bottom: 2rem;
    }

    .profile-image {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      object-fit: cover;
      flex-shrink: 0;
    }

    .profile-content {
      flex: 1;
    }

    @media (max-width: 600px) {
      .profile-header {
        flex-direction: column;
        text-align: center;
      }
    }
  </style>
</head>
<body>
  <header>
    <h1>Alexander K. Saeri</h1>
    <nav>
      <a href="/">Home</a>
      <a href="/other-projects">Other Projects</a>
      <a href="#contact">Contact</a>
    </nav>
  </header>

  <main>
    <slot />
  </main>

  <footer>
    <p>&copy; {new Date().getFullYear()} Alexander K. Saeri. All rights reserved.</p>
  </footer>
</body>
</html>
